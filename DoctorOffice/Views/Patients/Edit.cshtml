@{
  Layout = "_Layout";
}

@model DoctorOffice.Models.Patient

<h2>Edit</h2>

<h4>Edit this patient: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatientId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.Label("Select doctor")
  @Html.DropDownList("DoctorId")


  @Html.Label("Enter Birth Date")
  @Html.TextBoxFor(model => model.BirthDate)
  

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>